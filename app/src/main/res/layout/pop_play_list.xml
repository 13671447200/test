<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:background="@color/tran_light_grey"
    android:orientation="vertical">

    <LinearLayout
        android:background="@android:color/white"
        android:padding="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:text="收藏到歌单"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ill_pop_play_list_new"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="35dp">

            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/lay_icn_newlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:text="新建歌单"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <!--<com.ttdt.Util.Custom.InterceptLinearLayout-->
                <!--android:id="@+id/ill_pop_play_list_ok"-->
                <!--android:layout_width="25dp"-->
                <!--android:gravity="center"-->
                <!--android:layout_height="match_parent">-->

                <!--<ImageView-->
                    <!--android:layout_gravity="center"-->
                    <!--android:background="@drawable/local_fb_icn_ok"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content" />-->
            <!--</com.ttdt.Util.Custom.InterceptLinearLayout>-->


        </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pop_play_list_input"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_height="50dp">

        <EditText
            android:id="@+id/et_pop_play_list_new_list"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <com.ttdt.Util.Custom.InterceptLinearLayout
            android:id="@+id/ill_pop_play_list_ok"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/local_fb_icn_ok" />
        </com.ttdt.Util.Custom.InterceptLinearLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/list_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ListView>

    </LinearLayout>



</RelativeLayout>