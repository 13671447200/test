    <application
        android:allowBackup="true"
        android:allowTaskReparenting="false"
        android:hasCode="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="cn.eoe.notes.MainActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="cn.eoe.notes.AtyEditeNote" >
        </activity>
        <activity android:name="cn.eoe.notes.AtyPhotoViewer" >
        </activity>
        <activity android:name="cn.eoe.notes.AtyVideoViewer" >
        </activity>
        <activity
            android:name="cn.eoe.notes.User_login"
            android:label="@string/title_activity_user_login" >
        </activity>
    </application>

</manifest>